{
    "angularCompilerOptions": {
        "enableIvy": false,
        "fullTemplateTypeCheck": true,
        "preserveWhitespaces": false,
        "strictInjectionParameters": true
    },
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false, /*any type 생략 pys*/
        "outDir": "./dist/out-tsc",
        "paths": {
            "@app/*": [
                "app/*"
            ],
            "@common/*": [
                "modules/app-common/*"
            ],
            "@modules/*": [
                "modules/*"
            ],
            "@testing/*": [
                "testing/*"
            ]
        },
        "resolveJsonModule": true,
        "noImplicitThis": false,   /*20200618 pys==> Raise error on 'this' expressions with an implied 'any' type. */
        "sourceMap": true,
        "strict": false, /*엄격 한 타입 체크 해제 pys*/
        "target": "es2015",
        // "target": "es5",
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ]
    }
}